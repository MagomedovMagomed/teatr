        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="600*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Image HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Top" Source="minilogotip.png"/>
            <TextBlock TextWrapping="Wrap" Text="МАРИИНСКИЙ ТЕАТР" Width="561" MinHeight="1" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF17D1E4"/>

        </StackPanel>
        <Frame x:Name="FrmMain" HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="790" Grid.Row="1" Margin="0,0,0,-124"/>

    </Grid>
</Window>
