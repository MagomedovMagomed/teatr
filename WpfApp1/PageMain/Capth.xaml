<Window x:Class="WpfApp1.PageMain.Capth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.PageMain"
        mc:Ignorable="d"
        Title="Capth" Height="250" Width="400" WindowStyle="None">
    <Grid Background="#FFE6E1E1" Margin="0,0,0,0">
        <StackPanel HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="400" Background="#FF564B4B">
            <Label x:Name="capt" FontSize="50" FontStyle="Italic" FontFamily="Blackadder ITC"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="120" Margin="0,100,0,0" VerticalAlignment="Top" Width="400">
            <TextBox x:Name="captha" Height="40" TextWrapping="Wrap" Text="" Background="White"/>
            <Button x:Name="Open" Margin="0, 10, 0, 0" Content="Отправить" Height="50" Width="100" Background="{x:Null}" Click="Open_Click"/>
        </StackPanel>
    </Grid>
</Window>
