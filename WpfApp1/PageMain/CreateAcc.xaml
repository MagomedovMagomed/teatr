<Page x:Class="WpfApp1.PageMain.CreateAcc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="CreateAcc">

    <Grid Background="#FF9A273E">
        <StackPanel HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="790" Background="#FF9A273E">
            <StackPanel Height="51">
                <Label Content="Registration window" HorizontalAlignment="Center" FontSize="40" FontFamily="Algerian" FontWeight="Bold" Background="#00000000">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5F7B2" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Enter Last Name:" Margin="0 0 8 0" HorizontalAlignment="Center" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" Width="250" FontWeight="Bold">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5F7B2" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <TextBox x:Name="Surename" TextWrapping="Wrap" Height="30" Text="" Width="180"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Enter your name:" Margin="0 0 8 0" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" FontWeight="Bold" Width="250">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5F7B2" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <TextBox x:Name="Name" Height="30" TextWrapping="Wrap" Width="180"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Enter Middle name:" Margin="0 0 8 0" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" FontWeight="Bold" Width="250">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White" Offset="1"/>
                            <GradientStop Color="#FFF5F7B2" Offset="0"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <TextBox x:Name="Father_name" Height="30" TextWrapping="Wrap" Width="180"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Enter login:" Margin="0 0 8 0" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" FontWeight="Bold" Width="250">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5F7B2"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <TextBox x:Name="login" Height="30" TextWrapping="Wrap" Width="180"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Enter phone:" Margin="0 0 8 0" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" FontWeight="Bold" Width="250">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFE6F7B2"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <TextBox x:Name="Telepho" Width="180" Height="30"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Enter date of birth:" Margin="0 0 8 0" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" FontWeight="Bold" Width="250">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5F7B2"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <DatePicker Height="30" SelectedDateChanged="Birth_SelectedDateChanged" x:Name="Birth" Width="180" DisplayDateStart="" Text="DisplayDate" IsTodayHighlighted="False"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Enter email:" Margin="0 0 8 0" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" FontWeight="Bold" Width="250">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5F7B2"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <TextBox x:Name="EMail" Height="30" Width="180"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Enter password:" Margin="0 0 8 0" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" FontWeight="Bold" Width="250">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5F7B2"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <TextBox x:Name="txbPass" Height="30" Width="180"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Label Content="Confirm the password:" Margin="0 0 8 0" FontSize="20" FontFamily="TextBlock_PreviewMouseDown" FontWeight="Bold" Width="250">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF5F7B2"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <PasswordBox x:Name="psbPass" PasswordChanged="PasswordBox_PasswordChanged" Height="30" Width="180"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Height="40" Width="440">
                <Button FontFamily="TextBlock_PreviewMouseDown" x:Name="Create" Margin="15 0 20 0" Height="30" Content="Create" Width="180" Click="Button_Click" IsEnabled="False" Foreground="#FF9A273E" Background="#FFF5F7B2" BorderBrush="#FFF5F7B2" OpacityMask="#FFF5F7B2" FontSize="20" FontWeight="Bold"/>
                <Button FontFamily="TextBlock_PreviewMouseDown" x:Name="Back" Margin="20 0 20 0" Height="30" Content="Back" Width="180" Click="Back_Click" Background="#FFF5F7B2" Foreground="#FF9A273E" FontSize="20" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
